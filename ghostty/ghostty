# Shell Integration
shell-integration = bash
shell-integration-features = true

# Theme
theme = catppuccin-macchiato

# Fonts
font-family = "MesloLGS Nerd Font"
font-style-bold = MesloLGS Nerd Font Bold
font-style-italic = MesloLGS Nerd Font Italic
font-style-bold-italic = MesloLGS Nerd Font Bold Italic
